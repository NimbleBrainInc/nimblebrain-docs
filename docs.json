{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "NimbleTools CLI",
  "colors": {
    "primary": "#0D9373",
    "light": "#07C983",
    "dark": "#0D9373"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "introduction",
              "installation",
              "quickstart"
            ]
          },
          {
            "group": "Core Concepts",
            "pages": [
              "concepts/workspaces",
              "concepts/mcp-servers",
              "concepts/claude-integration"
            ]
          },
          {
            "group": "Configuration",
            "pages": [
              "configuration/environment-variables",
              "configuration/authentication"
            ]
          }
        ]
      },
      {
        "tab": "Commands",
        "groups": [
          {
            "group": "Authentication",
            "pages": [
              "commands/auth/login",
              "commands/auth/logout",
              "commands/auth/status",
              "commands/auth/signup"
            ]
          },
          {
            "group": "Workspace Management",
            "pages": [
              "commands/workspace/create",
              "commands/workspace/list",
              "commands/workspace/switch",
              "commands/workspace/select",
              "commands/workspace/delete",
              "commands/workspace/clear"
            ]
          },
