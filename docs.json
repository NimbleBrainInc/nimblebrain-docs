            "pages": [
              "commands/server/deploy",
              "commands/server/list",
              "commands/server/info",
              "commands/server/logs",
              "commands/server/scale",
              "commands/server/remove",
              "commands/server/claude-config"
            ]
          },
          {
            "group": "MCP Client",
            "pages": [
              "commands/mcp/connect",
              "commands/mcp/tools",
              "commands/mcp/call"
            ]
          },
          {
            "group": "Registry",
            "pages": [
              "commands/registry/list",
              "commands/registry/show"
            ]
          },
          {
            "group": "Secrets Management",
            "pages": [
              "commands/secrets/list",
              "commands/secrets/set",
              "commands/secrets/unset"
            ]
          },
          {
            "group": "Token Management",
            "pages": [
              "commands/token/refresh",
              "commands/token/show"
            ]
          },
          {
            "group": "Utilities",
            "pages": [
              "commands/health"
            ]
          }
